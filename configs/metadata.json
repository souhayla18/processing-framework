{
    "dataflows": [
      {
        "name": "motor-ingestion",
        "sources": [
          {
            "name": "policy_inputs",
            "path": "data/input/motor_policy.json",
            "format": "json"
          }
        ],
        "validations": {
          "driver_age": {"type": "int", "min": 18, "max": 100, "required": true},
          "plate_number": {"type": "string", "not_empty": true, "required": true}
        },
        "transformations": {
          "add_ingestion_dt": true
        },
        "sinks": {
          "ok": "data/output/ok/",
          "ko": "data/output/ko/"
        }
      }
    ]
  }
  